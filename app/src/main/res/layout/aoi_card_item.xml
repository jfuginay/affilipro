<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="4dp"
    android:background="@drawable/aoi_card_background"
    android:orientation="vertical"
    android:padding="12dp"
    android:elevation="4dp">

    <!-- Title Row -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="8dp">

        <TextView
            android:id="@+id/aoi_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="AOI Name"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="#FFFFFF"
            android:ellipsize="end"
            android:maxLines="1" />

        <TextView
            android:id="@+id/aoi_shape_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Circle"
            android:textSize="12sp"
            android:textColor="#FF9800"
            android:background="#3a3a3a"
            android:paddingStart="8dp"
            android:paddingEnd="8dp"
            android:paddingTop="4dp"
            android:paddingBottom="4dp"
            android:layout_marginStart="8dp" />
    </LinearLayout>

    <!-- Info Row -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="4dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Area: "
            android:textSize="14sp"
            android:textColor="#AAAAAA" />

        <TextView
            android:id="@+id/aoi_area"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="0.0 kmÂ²"
            android:textSize="14sp"
            android:textColor="#FFFFFF" />
    </LinearLayout>

    <!-- Coordinates Row -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="12dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Center: "
            android:textSize="14sp"
            android:textColor="#AAAAAA" />

        <TextView
            android:id="@+id/aoi_coordinates"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="0.00000, 0.00000"
            android:textSize="14sp"
            android:textColor="#FFFFFF"
            android:fontFamily="monospace" />
    </LinearLayout>

    <!-- Action Buttons -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="end">

        <Button
            android:id="@+id/btn_zoom_to_aoi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Zoom To"
            android:textSize="12sp"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            style="@style/darkButton"
            android:layout_marginEnd="8dp" />

        <Button
            android:id="@+id/btn_delete_aoi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Delete"
            android:textSize="12sp"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            android:textColor="#F44336"
            style="@style/darkButton" />
    </LinearLayout>

</LinearLayout>
